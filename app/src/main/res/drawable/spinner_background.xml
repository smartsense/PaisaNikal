<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <item
        android:gravity="center_vertical|right"
        android:right="@dimen/_8sdp">
        <layer-list>
            <item
                android:width="@dimen/_12sdp"
                android:height="@dimen/_12sdp"
                android:bottom="@dimen/_10sdp"
                android:gravity="center">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/colorPrimary" />
                        <stroke
                            android:width="@dimen/_1sdp"
                            android:color="@color/colorPrimary" />
                    </shape>
                </rotate>
            </item>
            <item
                android:width="@dimen/_20sdp"
                android:height="@dimen/_10sdp"
                android:bottom="@dimen/_21sdp"
                android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>